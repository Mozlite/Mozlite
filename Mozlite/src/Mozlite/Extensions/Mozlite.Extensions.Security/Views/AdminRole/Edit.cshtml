@using Mozlite.Extensions.Identity
@model Role

@{
    Layout = "_Modal";
    ViewBag.Title = Model != null ? "编辑用户组" : "添加用户组";
}
<input type="hidden" asp-for="RoleId"/>
<div class="form-group">
    <label class="control-label">名称</label>
    @if (Model?.RoleName == IdentitySettings.Administrator || Model?.RoleName == IdentitySettings.Register)
    {<input type="text" class="form-control" readonly="readonly" asp-for="RoleName"> }
    else
    {<input type="text" class="form-control" asp-for="RoleName" required="required" placeholder="唯一键">}
</div>
<div class="form-group">
    <label class="control-label">显示名称</label>
    <input type="text" class="form-control" asp-for="DisplayName" required="required" placeholder="用于前台显示的名称">
</div>
<div class="form-group">
    <label class="control-label">优先级</label>
    <input type="text" class="form-control" asp-for="Priority" required="required" placeholder="优先级越高越高级">
</div>