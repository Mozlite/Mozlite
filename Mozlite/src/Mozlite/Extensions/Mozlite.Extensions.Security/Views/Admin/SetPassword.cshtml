@model SetPasswordViewModel

@{
    Layout = "_Modal";
    ViewBag.Title = "设置密码";
}

<input type="hidden" asp-for="UserId"/>
<div class="form-group">
    <label class="control-label">密码</label>
    <input type="password" class="form-control" asp-for="Password" required="required" placeholder="不少于 6 位">
</div>
<div class="form-group">
    <label class="control-label">确认密码</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" required="required" placeholder="再一次输入密码">
</div>