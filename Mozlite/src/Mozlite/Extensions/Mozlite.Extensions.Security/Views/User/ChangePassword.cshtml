@{
    Layout = "_Modal";
    ViewBag.Title = "修改密码";
}
@model ChangePasswordViewModel
<div class="form-group">
    <label class="control-label">原始密码</label>
    <input type="password" asp-for="Password" required="required" class="form-control"/>
</div>

<div class="form-group">
    <label class="control-label">新密码</label>
    <input type="password" asp-for="NewPassword" required="required" class="form-control" />
</div>

<div class="form-group">
    <label class="control-label">确认密码</label>
    <input type="password" asp-for="ConfirmPassword" required="required" class="form-control" />
</div>