@model Tag

@{
    Layout = "_Modal";
    ViewBag.Title = Model != null ? "编辑标签" : "添加标签";
}
<input type="hidden" asp-for="Id"/>
<div class="form-group">
    <label class="control-label">名称</label>
    <input type="text" class="form-control" asp-for="Name" required="required" placeholder="分类名称">
</div>
<div class="form-group">
    <label class="control-label">分类</label>
    <tagcategorylist class="form-control" x-for="CategoryId"></tagcategorylist>
</div>
<div class="form-group">
    <label class="control-label">图标</label>
    <div class="input-group">
        <input class="form-control" asp-for="IconUrl" />
        <div class="input-group-btn"><button onclick="$('#iconfile').click();" type="button" class="btn btn-primary"><i class="fa fa-file-photo-o"></i></button></div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">描述</label>
    <textarea rows="8" class="form-control" asp-for="Description"></textarea>
</div>