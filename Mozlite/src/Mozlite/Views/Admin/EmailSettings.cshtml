@{
    Layout = "_Admin";
    ViewBag.Title = "网站配置";
    ViewBag.Current = "home.emailsettings";
}

@model Mozlite.Extensions.Messages.EmailSettings

<div class="form-container scrolly settings">
    <form method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label asp-for="Enabled" class="col-sm-2 control-label">激活邮件系统</label>
            <div class="col-sm-4">
                <input type="checkbox" asp-for="Enabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SmtpServer" class="col-sm-2 control-label">SMTP服务器</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" asp-for="SmtpServer">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SmtpPort" class="col-sm-2 control-label">端口</label>
            <div class="col-sm-1">
                <input class="form-control" type="number" asp-for="SmtpPort"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UseSsl" class="col-sm-2 control-label">使用SSL</label>
            <div class="col-sm-4">
                <input type="checkbox" asp-for="UseSsl">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SmtpUserName" class="col-sm-2 control-label">邮件地址</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" asp-for="SmtpUserName">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SmtpPassword" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-4">
                <input type="password" value="@Model?.SmtpPassword" class="form-control" asp-for="SmtpPassword">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">保存配置</button>
            </div>
        </div>
    </form>
</div>